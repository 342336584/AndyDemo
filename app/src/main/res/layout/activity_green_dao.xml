<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="insert" />

        <Button
            android:id="@+id/query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="query" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greendao" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greendao_key_class" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n\n
        \n GreenDao 八大特性
        \n 1.对象/关系映射（ORM）[Object/relation mapping]
        \n 2.性能 （OrmLite、ActiveAndroid）
        \n 3.加密支持
        \n 4.微小的依赖库 （100kb）
        \n 5.活动实体 (public User readEntity(Cursor cursor, int offset))
        \n 6.协议缓冲区支持
        \n 7.自动生成代码 (DaoMaster\DaoSession\EntityDao)
        \n 8.开源
        \n\n " />

    </LinearLayout>

</ScrollView>